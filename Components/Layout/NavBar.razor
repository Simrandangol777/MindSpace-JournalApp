@code {
    private User? currentUser;
    private string? currentPath;

    protected override void OnInitialized()
    {
        currentUser = AuthService.GetCurrentUser();
        currentPath = Navigation.Uri;
        Navigation.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, Microsoft.AspNetCore.Components.Routing.LocationChangedEventArgs e)
    {
        // Update current path and trigger re-render
        currentPath = Navigation.Uri;
        StateHasChanged();
    }

    private bool IsActive(string path)
    {
        if (string.IsNullOrEmpty(currentPath)) return false;
        
        // Get the relative URI path (remove base URI and query string)
        var baseUri = new Uri(Navigation.BaseUri);
        var currentUri = new Uri(Navigation.Uri);
        var relativePath = baseUri.MakeRelativeUri(currentUri).ToString().Split('?')[0].TrimEnd('/');
        if (string.IsNullOrEmpty(relativePath)) relativePath = "/";
        
        var normalizedPath = path.TrimEnd('/');
        if (string.IsNullOrEmpty(normalizedPath)) normalizedPath = "/";
        
        // Handle root/dashboard case
        if (normalizedPath == "/dashboard" && (relativePath == "/" || relativePath == "/dashboard"))
            return true;
        
        // Exact match
        if (relativePath.Equals(normalizedPath, StringComparison.OrdinalIgnoreCase))
            return true;
        
        // Check if current path starts with target path followed by / (for nested routes)
        // This prevents "/entries" from matching "/entry" or "/editor"
        if (relativePath.StartsWith(normalizedPath + "/", StringComparison.OrdinalIgnoreCase))
            return true;
        
        return false;
    }

    private static string TruncateEmail(string? email)
    {
        if (string.IsNullOrEmpty(email)) return "";
        if (email.Length <= 24) return email;
        return email[..10] + "â€¦" + email[^10..];
    }

    private void HandleLogout()
    {
        AuthService.Logout();
        Navigation.NavigateTo("/", true);
    }

    public void Dispose()
    {
        Navigation.LocationChanged -= OnLocationChanged;
    }
}